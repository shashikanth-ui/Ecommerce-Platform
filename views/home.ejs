<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-shop</title>
</head>
<body>
    <h1>welcome lazy human</h1>
    <a class="logoutBTN" href="/logout">Logout</a>
    <a href="/view-cart">view cart</a><br>
        <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
            <div style="border:1px solid #ccc; padding:10px; margin:10px 0;">
                <p>Name: <%= product.p_name %></p>
                <p>Category: <%= product.p_category %></p>
                <p>Cost: $<%= product.p_cost %></p>
                <p>Image:</p>
                <img src="<%= product.p_image_url %>" alt="<%= product.p_name %>" width="150"><br>
<a href="/cart/<%= product.id %>">add to cart</a><br>
<a href="/buy/<%= product.id %>">buy</a>
            </div>
        <% }) %>
    <% } else { %>
        <p>No products</p>
    <% } %>


</body>
</html>