<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecom Admin-Page</title>
</head>
<body>
    <h1>Hola Admin</h1>
    <a href="/admin/add-products">Add Product</a>

    <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
            <div style="border:1px solid #ccc; padding:10px; margin:10px 0;">
                <p>Product ID: <%= product.id %></p>
                <p>Name: <%= product.p_name %></p>
                <p>Category: <%= product.p_category %></p>
                <p>Cost: $<%= product.p_cost %></p>
                <p>Image:</p>
                <img src="<%= product.p_image_url %>" alt="<%= product.p_name %>" width="150"><br>
<a href="/admin/edit-products/<%= product.id %>">edit</a><br>
<a href="/admin/delete-products/<%= product.id %>">delete</a>
            </div>
        <% }) %>
    <% } else { %>
        <p>No products added yet.</p>
    <% } %>
</body>
</html>
